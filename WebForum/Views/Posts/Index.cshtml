@model WebForum.PL.ViewModels.TopicDetailsViewModel


<div class="card text-center">

    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <h5 class="card-title">@Model.Topic.TopicName :</h5>
                <div class="d-flex justify-content-start aligns-items-center">
                    <div>
                        <a asp-controller="Posts" asp-action="CreatePost" asp-route-id = "@Model.Topic.Id" class="btn btn-primary">Add post</a>
                    </div>
                 </div>

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                    @foreach (var mod in Model.Posts)
                    {
                        <div class="col">
                            <div class="card shadow-sm">
                                <img class="bd-placeholder-img card-img-top" width="100" height="225" src="~/@mod.ImagePath"  aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#55595c"></rect>
                                <div class="card-body">
                                    <h3>@mod.Article</h3>

                                    <p class="card-text">
                                        @mod.Text.Split("", 20)
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a  asp-controller="Posts" asp-action="Details" asp-route-id ="@mod.Id"  type="button" class="btn btn-sm btn-outline-secondary">See</a>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>


                    }
                </div>
            </li>
        </ul>
    </div>
</div>